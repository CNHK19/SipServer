<Application x:Class="ControlPanel.Programme"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Startup="Application_Startup" Exit="Application_Exit" ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="BottomButtons">
                <Setter Property="StackPanel.Margin" Value="0 10 0 0"></Setter>
                <Setter Property="StackPanel.Orientation" Value="Horizontal"></Setter>
                <Setter Property="StackPanel.HorizontalAlignment" Value="Right"></Setter>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Button.MinWidth" Value="80"></Setter>
                <Setter Property="Button.Margin" Value="2 0 2 0"></Setter>
            </Style>
            <Style x:Key="WindowPanel">
                <Setter Property="Panel.Margin" Value="5 5 5 10"></Setter>
            </Style>
            <Style TargetType="{x:Type Window}">
                <Setter Property="Window.Background" Value="LightGray" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Images\PresenceImages.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
