<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- RED BALL -->
    <ControlTemplate x:Key="RedBall">
        <Canvas Width="16" Height="16">
            <Ellipse Width="16" Height="16">
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.5, 0.8">
                        <GradientStop Color="Red" Offset="0"></GradientStop>
                        <GradientStop Color="DarkRed" Offset="1"></GradientStop>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="12" Height="6" Opacity="0.7" Margin="2, 1, 0, 0">
                <Ellipse.BitmapEffect>
                    <BlurBitmapEffect Radius="2"></BlurBitmapEffect>
                </Ellipse.BitmapEffect>
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,2">
                        <GradientStop Color="White" Offset="0"></GradientStop>
                        <GradientStop Color="Red" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>
    </ControlTemplate>
